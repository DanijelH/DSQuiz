<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DSKviz</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,800,700|Merriweather:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
    <a href="#cd-nav" class="cd-nav-trigger">
        Menu
        <span class="cd-nav-icon"></span>

        <svg x="0px" y="0px" width="54px" height="54px" viewBox="0 0 54 54">
            <circle fill="transparent" stroke="#656e79" stroke-width="1" cx="27" cy="27" r="25" stroke-dasharray="157 157" stroke-dashoffset="157"></circle>
        </svg>
    </a>

    <div id="cd-nav" class="cd-nav">
        <div class="cd-navigation-wrapper">
            <div class="cd-half-block">
                <h2>Navigation</h2>
                <nav>
                    <ul class="cd-primary-nav">
                        <!--<li>@Html.ActionLink("Intro page", "Index", "Home")</li>-->
                        @if (this.User.IsInRole("Administrator"))
                        {
                            <li>@Html.ActionLink("Category List", "Index", "Category")</li>
                        }
                        @if (this.User.IsInRole("Administrator"))
                        {
                            <li>@Html.ActionLink("Question List", "Index", "Question")</li>
                        }
                        @if (this.User.IsInRole("Administrator"))
                        {
                            <li>@Html.ActionLink("Quiz List", "Index", "Quiz")</li>
                        }
                        <li>@Html.ActionLink("Play quiz", "AvailableQuizes", "Result")</li>
                        <li>@Html.ActionLink("Show results", "ShowResult", "Result")</li>
                    </ul>
                </nav>
            </div><!-- .cd-half-block -->

            <div class="cd-half-block">
                @Html.Partial("_LoginPartial")
                <address>
                    <ul class="cd-contact-info">
                        <li>
                            <a href="http://danijelhrcek.com" target="_blank">danijelhrcek.com</a>
                        </li>
                        <li>
                            <a href="mailto:danijelhdev@gmail.com">danijelhdev@gmail.com</a>
                        </li>
                        <li>
                            <span>Danijel Hrček</span>
                            <span>Wannabe web developer</span>
                            <span>Krapina/Zagreb - Croatia</span>
                        </li>
                        <!--
                        <li>
                            <span>.NET MVC Seminar</span>
                            <span><a href="mailto:icesar@tvz.hr">Ivan Cesar mag. ing.</a></span>
                        </li>
                        -->
                    </ul>
                </address>
            </div> <!-- .cd-half-block -->
        </div> <!-- .cd-navigation-wrapper -->
    </div> <!-- .cd-nav -->

    <main class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Danijel H.</p>
        </footer>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Html.Partial("_UICultureSetup")
    @RenderSection("scripts", required: false)
</body>
</html>
