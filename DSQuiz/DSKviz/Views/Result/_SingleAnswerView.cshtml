@model DSKviz.Models.AnswerViewModel


@using (Html.BeginCollectionItem("Answers"))
{
    <div class="form-horizontal single-contact-wrapper">
        @Html.HiddenFor(p => p.ID)
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(p => p.AnswerText, Model.AnswerText, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.IsSelected, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IsSelected, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}


